<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="210dp"
    android:layout_height="wrap_content"
    android:layout_marginEnd="15dp"
    app:cardCornerRadius="10dp"
    app:cardBackgroundColor="@color/white"
    app:strokeColor="@color/card_border_color"
    app:strokeWidth="1dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/article_thumbnail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxHeight="100dp"
            android:src="@drawable/image_article_placeholder"/>
        <TextView
            android:id="@+id/article_title"
            android:layout_width="match_parent"
            android:maxWidth="210dp"
            android:layout_marginHorizontal="10dp"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textStyle="bold"
            android:text="Understanding Anxiety: Signs and how to cope"/>

        <TextView
            android:id="@+id/article_description"
            android:layout_width="match_parent"
            android:maxWidth="210dp"
            android:layout_marginHorizontal="10dp"
            android:layout_marginBottom="10dp"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:textSize="8sp"
            android:ellipsize="marquee"
            android:text="Anxiety is more common than you think, but recognizing the signs early can help."/>
    </LinearLayout>

</com.google.android.material.card.MaterialCardView>